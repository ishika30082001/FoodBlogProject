<%- include('./header.ejs') %>
    <section class="banner">
        <div class="banner-box">
            <div class="intro-text">
                <div class="intro-text-box">
                    <h1 style="font-family: Georgia, 'Times New Roman', Times, serif; font-size: 65px;" class="animate__animated  animate__jello">Delicious Food</h1>
                    <H3 style="font-family: Georgia, 'Times New Roman', Times, serif;" class="animate__animated animate__bounceIn">TRY IT NOW!</H3>
                </div>
            </div>
            <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
                <ol class="carousel-indicators">
                    <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
                    <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
                    <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
                </ol>
                <div class="carousel-inner">
                    <div class="carousel-item active">
                        <img class="d-block img-fluid" src="/assets/images/header_images/cutlet2.jpg" alt="First slide" style="background-position: contain; height: 700px">
                    </div>
                    <div class="carousel-item">
                        <img class="d-block w-100 carouselimage" src="/assets/images/header_images/pasta.jpg" alt="Second slide">
                    </div>
                    <div class="carousel-item">
                        <img class="d-block w-100 carouselimage" src="/assets/images/header_images/food.jpg" alt="Third slide">
                    </div>
                </div>
                <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button"
                    data-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="carousel-control-next" href="#carouselExampleIndicators" role="button"
                    data-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="sr-only">Next</span>
                </a>
</div>
</div>
        </div>
    </section>
    <section class="featured-blog mtb-40 mt-5">
        <div class="container">
            <div class="row">
                <% b.forEach( (item)=> { %>
                    <div class="col-md-4">
                        <div class="blog-box">
                            <img src="<%= item.image.url %>" alt="blog1" />
                            <h3><%= item.Title %></h3>
                            <p><%= item.createdAt.toLocaleDateString() %></p>
                            <p><%= item.description.slice(0,100) %></p>
                            <a href="/detail/<%= item.id %>" class="btn btn-danger">Read more...</a>
                        </div>
                    </div>
                    <% }) %>
            </div>
        </div>
    </section>
    <%- include('./footer.ejs') %>